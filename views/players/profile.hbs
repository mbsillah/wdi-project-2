<div>
    <h1 class="title">{{player.firstName}} "{{player.gamertag}}" {{player.lastName}}</h1>
    <img src="{{player.img}}" class="img-thumbnail" id="profilePic">
    <div>
    <a href="http://twitter.com/{{player.twitterHandle}}">Follow me on Twitter</a>
    </div>
</div>

<div>
<a href="/players/{{player._id}}/edit">Edit Player</a>

</div>
<div>
<a href="/players/{{player.id}}/delete">Delete Player</a> 
</div>


<h3 class="title">Team:</h3>
{{#each player.characters}}
  
<div class="characterContainer">
    <p>{{this.name}}</p> 
    <img class="characterImage img-thumbnail" src="{{this.img}}" alt="{{this.name}}">
</div>
{{/each}}

<div>
<a href="/players/{{player._id}}/characters/new">Add Team</a>
</div>
<div>
<a href="/players/{{player._id}}/characters/{{player.characters.0._id}}&{{player.characters.1._id}}&{{player.characters.2._id}}/edit">Edit Team</a>
</div>
<div>
<a href="/players/{{player._id}}/characters/{{player.characters.0._id}}&{{player.characters.1._id}}&{{player.characters.2._id}}/delete">Delete Team</a> 
</div>

<div>
<a href="/players/">Return to List</a>
</div>